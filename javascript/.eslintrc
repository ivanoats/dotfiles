{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 7,
    "ecmaFeatures": {
        "jsx": true
      }
  },
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "react",
    "immutable",
    "import"
  ],
  "env": {
    "mocha": true,
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "strict": 0,
    "indent": [2, 2],
    "quotes": [1, "single"],
    "no-multi-spaces": [1, {
      "exceptions": {
        "VariableDeclarator": true,
        "FunctionExpression": true
      }
    }],
    "key-spacing": [0, {"align": "value"}],
    "no-underscore-dangle": 0,
    "no-var": 1,
    "no-undef": 2,
    "no-param-reassign": 2,
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "react/no-multi-comp": 1,
    "react/react-in-jsx-scope": 1,
    "immutable/no-let": 2,
    "immutable/no-this": 2,
    "immutable/no-mutation": 2,
    "import/no-unresolved": [2, {commonjs: true}],
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2
  }
}
